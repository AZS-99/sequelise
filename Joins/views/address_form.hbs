{{>navbar}}

<form method="POST" action="/address" class="col-sm-12">
    <input type="hidden" name="userID" value="{{user.user_id}}" />
    <div class="form-group row">
        <label class="col-form-label col-form-label-lg  col-sm-2 font-weight-bold">Street#</label>
        <input class="form-control form-control-lg col-sm-1" type="number" min="1" name="street_no" required />
    </div>

    <div class="form-group row">
        <label class="col-form-label col-form-label-lg  col-sm-2 font-weight-bold">Street Name</label>
        <input class="form-control form-control-lg col-sm-4" name="street" type="text" required />
    </div>

    <div class="form-group row">
        <label class="col-form-label col-form-label-lg  col-sm-2 font-weight-bold">Postal Code</label>
        <input class="form-control form-control-lg col-sm-4" name="postal_code" pattern="^([a-z][0-9]){3}$" type="text"  required />
    </div>


    <div class="form-group row">
        <label class="col-form-label col-form-label-lg  col-sm-2 font-weight-bold">City</label>
        <input class="form-control form-control-lg col-sm-4" name="city" type="text" required />
    </div>

    <div class="form-control row">
        <label class="col-form-label col-form-label-lg col-sm-2 font-weight-bold">Country</label>
        <select name="country" required>
            <option value='CANADA'>Canada</option>
            <option value="USA">USA</option>
        </select>
    </div>

    <div class="form-control row">
        <button class="btn btn-primary" type="submit">Confirm Address</button>
    </div>




</form>