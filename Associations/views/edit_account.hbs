<form method="POST" action="/edit_account" class="col-sm-12">
    <div class="form-group row">
        <label class="col-form-label col-form-label-lg col-sm-2 font-weight-bold">First Name</label>
        <input type="text" name="first_name" minlength="2" maxlength="25" pattern="[a-zA-Z]{2,25}" title="Only alphabets allowed"
                class="form-control form-control-lg col-sm-4" value="{{user.first_name}}" required />
    </div>

    <div class="form-group row">
        <label class="col-form-label col-form-label-lg col-sm-2 font-weight-bold">Surname</label>
        <input type="text" name="surname" minlength="2" maxlength="30" pattern="^[a-zA-Z]{2,30}$" title="Only alphabets allowed"
                class="form-control form-control-lg col-sm-4" value="{{user.surname}}" required />
    </div>

    <div class="form-group row">
        <label class="col-form-label col-form-label-lg col-sm-2 font-weight-bold">Phone Number</label>
        <input type="tel" name="phoneNumber" pattern="^\d{10,15}$|^\(\d{3})-\d{3}-\d{4}$" 
                class="form-control form-control-lg col-sm-4" value="{{user.phone_number}}"/>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-form-label-lg col-sm-2 font-weight-bold">Email</label>
        <input type="email" name="email" id="email" minlength="8" maxlength="250" pattern="^\w[\w.]{1,239}?@\w{2,30}?\.[a-z]{2,10}$"
                class="form-control form-control-lg col-sm-6" value="{{user.email}}" required/>
        <label class="col-form-label col-form-label-lg col-sm-4 text-danger" id="emailFeedback"></label>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-form-label-lg col-sm-2 font-weight-bold">Gender</label>
        
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" name="gender" id="maleGender" value="MALE" required/>
            <label class="form-check-label" for="maleGender">Male</label>
        </div>

        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" name="gender" id="femaleGender" value="FEMALE"/>
            <label class="form-check-label" for="femaleGender">Female</label>
        </div>

        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" name="gender" id="genderNeutral" value="OTHER"/>
            <label class="form-check-label" for="genderNeutral">Human</label>
        </div>
    </div>

    <div class="form-group row">
        <input class="form-control form-control-lg col-sm-4 m-1" name="password" placeholder="Enter your password" type="password" required />
        <button type="submit" id="submitBtn" class="btn btn-primary m-1">Confirm</button>
    </div>
    

</form>

